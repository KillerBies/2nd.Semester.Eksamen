@page "/finalizepayment/{id:int}"
@namespace _2nd.Semester.Eksamen.Pages.PaymentPages
@rendermode InteractiveServer

@if (isLoading)
{
    <p>Loading…</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else if (paymentSuccess)
{
    <p class="text-success">Payment completed! Order created/updated successfully.</p>
}
else
{
    <h3>Order Summary</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>Original (kr)</th>
                <th>Discount</th>
                <th>Final (kr)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in itemDiscounts)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.OriginalPrice.ToString("0.00")</td>
                    <td>
                        @if (item.DiscountAmount > 0)
                        {
                            <span>@item.DiscountName (@(item.DiscountAmount * 100)%)</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@item.FinalPrice.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Subtotal: @originalTotal.ToString("0.00") kr</strong></p>

    @if (appliedDiscount != null)
    {
        <p>
            Overall Best Discount: <strong>@appliedDiscount.Name</strong>
            @((appliedDiscount.DiscountAmount * 100).ToString("0"))%
        </p>
    }

    @if (loyaltyDiscount != null)
    {
        <p>
            Loyalty Discount Check:
            <strong>@loyaltyDiscount.Name</strong>
            @((loyaltyDiscount.DiscountAmount * 100).ToString("0"))%
        </p>
    }

    <h4>Total: @finalTotal.ToString("0.00") kr</h4>

    <button class="btn btn-primary" @onclick="FinalizePaymentAsync">Pay Now</button>
}
