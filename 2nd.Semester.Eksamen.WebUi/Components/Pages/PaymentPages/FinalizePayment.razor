@page "/finalizepayment/{id:int}"
@namespace _2nd.Semester.Eksamen.Pages.PaymentPages
@rendermode InteractiveServer

@if (isLoading)
{
    <p>Loading…</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p class="text-danger">@errorMessage</p>
}
else if (paymentSuccess)
{
    <div class="alert alert-success">
        🎉 Payment completed! Order created/updated successfully.
    </div>
}
else
{
    <h3 class="mb-3">Products in Your Booking</h3>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Product / Treatment</th>
                <th>Original Price (kr)</th>
                <th>Discount</th>
                <th>Final Price (kr)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in itemDiscounts)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.OriginalPrice.ToString("0.00")</td>
                    <td>
                        @if (item.DiscountAmount > 0)
                        {
                            <span class="text-success">@item.DiscountName (@(item.DiscountAmount * 100)%)</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td class="fw-bold">@item.FinalPrice.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="mt-3"><strong>Subtotal:</strong> @originalTotal.ToString("0.00") kr</p>

    @if (loyaltyDiscount != null)
    {
        <p class="text-info">
            Loyalty Discount Applied: <strong>@loyaltyDiscount.Name</strong>
            (@(loyaltyDiscount.DiscountAmount * 100).ToString("0")%)
        </p>
    }

    <h4 class="mt-3 text-primary">Total: @finalTotal.ToString("0.00") kr</h4>

    <button class="btn btn-primary mt-2" @onclick="FinalizePaymentAsync">Pay Now</button>


}
