@page "/DiscountOverviewPage"
@using _2nd.Semester.Eksamen.Application.Services.ProductServices
@using _2nd.Semester.Eksamen.Application.ApplicationInterfaces
@using _2nd.Semester.Eksamen.Application.DTO.ProductDTO
@using _2nd.Semester.Eksamen.WebUi.Components.Shared
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@inject IDiscountService discountService
@rendermode InteractiveServer


<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Rabatter</h1>
                    <p class="subtitle">Oversigt over alle rabatter</p>
                </div>
                <div class="input-group">
                    <div class="equal-row ms-auto">
                        <select id="discountType" class="bg-white search-box" name="discountType" @bind="SearchTermType" @bind:event="oninput">
                            <option value="">Alle</option>
                            <option value="Kampagne Rabat">Kampagner</option>
                            <option value="Loyalitets Rabat">Loyalitets rabatter</option>
                        </select>
                        <input type="text" class="search-box" placeholder="Søg Rabattens Navn..." @bind="SearchTermName" @bind:event="oninput"></input>
                        <button class="btn btn-primary" @onclick="() => isVisible = true">
                            <i class="bi bi-plus-lg"></i> Tilføj Tilbud
                        </button>
                    </div>
                </div>
            </div>
            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total</h3>
                        <span>@Discounts.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Kampagner</h3>
                        <span>@CountCampaign</span>
                    </div>
                    <div class="stat-card">
                        <h3>Loyalitets Discounts</h3>
                        <span>@CountLoyalty</span>
                    </div>
                </div>

                <div style="margin:30px;">
                    @if (Discounts == null)
                    {
                        <p>Indlæser rabatter...</p>
                    }
                    else if (!Discounts.Any())
                    {
                        <p>Ingen rabatter fundet.</p>
                    }
                    else
                    {
                        <div class="grid">
                            @foreach (var discount in FilterdDiscounts)
                            {
                                <div class="discount-card @(discount.IsActive ? "active" : "inactive")">
                                    <div class="discount-card-header d-flex flex-row">
                                        <div>
                                            <h3>@discount.Name</h3>
                                            <span class="small status @(discount.IsActive ? "active" : "inactive")">
                                                @(discount.IsActive ? "Aktiv" : "Inaktiv")
                                            </span>
                                        </div>
                                        <div class="ms-auto">
                                            <span class="badge @(discount.Type == "Kampagne Rabat" ? "campaign" : "loyalty")">
                                                @discount.Type
                                            </span>
                                        </div>
                                    </div>

                                    <div class="discount-card-body">
                                        @if (discount.Type == "Kampagne Rabat")
                                        {
                                            <div class="info-row">
                                                <span class="info-label">Fra</span>
                                                <span class="info-value">@discount.Start.ToShortDateString()</span>
                                            </div>
                                            <div class="info-row">
                                                <span class="info-label">Til</span>
                                                <span class="info-value">@discount.End.ToShortDateString()</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="info-row">
                                                <span class="info-label">Loyalitetstype</span>
                                                <span class="info-value">@discount.LoyaltyDiscountType</span>
                                            </div>
                                            <div class="info-row">
                                                <span class="info-label">Minimum besøg</span>
                                                <span class="info-value">@discount.MinimumVisits</span>
                                            </div>
                                        }
                                        @if (discount.TreatmentDiscount > 0)
                                        {
                                            <div class="info-row">
                                                <span class="info-label @(discount.IsActiveForTreatments ? "active" : "")">Behandling</span>
                                                <span class="info-value">@((discount.TreatmentDiscount).ToString("0"))%</span>
                                            </div>
                                        }

                                        @if (discount.ProductDiscount > 0)
                                        {
                                            <div class="info-row">
                                                <span class="info-label @(discount.IsActiveForProducts ? "active" : "")">Produkt</span>
                                                <span class="info-value">@((discount.ProductDiscount).ToString("0"))%</span>
                                            </div>
                                        }
                                    </div>

                                    <div class="discount-card-footer">


                                        <button class="btn card-btn w-100" @onclick="() => ShowDiscountDetails(discount)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (isVisible)
{
    <CreateWindow IsVisible=isVisible IsVisibleChanged="v => isVisible = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto; height:auto;">
        <CreateDiscount></CreateDiscount>
    </CreateWindow>
}

@if (ShowDetails)
{
    <BookingNotification IsVisible=ShowDetails IsVisibleChanged="v => ShowDetails = v">
        <div class="discount-details-card">
            <div class="discount-card-header d-flex flex-row mb-2">
                <div>
                    <h3>@SelectedDiscount.Name</h3>
                    <span class="small status @(SelectedDiscount.IsActive ? "active" : "inactive")">
                        @(SelectedDiscount.IsActive ? "Aktiv" : "Inaktiv")
                    </span>
                </div>
                <div class="ms-auto">
                    <span class="badge @(SelectedDiscount.Type == "Kampagne Rabat" ? "campaign" : "loyalty")" style="font-size: .8rem;">
                        @SelectedDiscount.Type
                    </span>
                </div>
            </div>
            <div class="discount-info">
                @if (SelectedDiscount.Type != "Kampagne Rabat")
                {
                    <div class="info-row">
                        <span class="info-label">Loyalitetstype</span>
                        <span class="info-value"><b>@SelectedDiscount.LoyaltyDiscountType</b></span>
                    </div>
                }
                @if (SelectedDiscount.Type == "Kampagne Rabat")
                {
                    <div class="d-flex flex-column align-items-center">
                        <span class="badge bg-dark bg-opacity-50 " style="font-size: .8rem">
                            @TimeString
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Start</span>
                        <span class="info-value"><b>@SelectedDiscount.Start.ToShortDateString()</b></span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Slut</span>
                        <span class="info-value"><b>@SelectedDiscount.End.ToShortDateString()</b></span>
                    </div>
                }

                @if (SelectedDiscount.MinimumVisits > 0)
                {
                    <div class="info-row">
                        <span class="info-label">Minimum besøg</span>
                        <span class="info-value"><b>@SelectedDiscount.MinimumVisits</b></span>
                    </div>
                }
                <div class="info-row">
                    <span class="info-label">Antal anvendelser</span>
                    <span class="info-value"><b>@SelectedDiscount.NumberOfUses</b></span>
                </div>
                @if (SelectedDiscount.TreatmentDiscount > 0)
                {
                    <div class="info-row">
                        <span class="info-label @(SelectedDiscount.IsActiveForTreatments ? "active" : "")">Behandling</span>
                        <span class="info-value"><b>@((SelectedDiscount.TreatmentDiscount).ToString("0"))%</b></span>
                    </div>
                }

                @if (SelectedDiscount.ProductDiscount > 0)
                {
                    <div class="info-row">
                        <span class="info-label @(SelectedDiscount.IsActiveForProducts ? "active" : "")">Produkt</span>
                        <span class="info-value"><b>@((SelectedDiscount.ProductDiscount).ToString("0"))%</b></span>
                    </div>
                }
                @if (SelectedDiscount.Type == "Kampagne Rabat")
                {
                    <p class="discount-description">
                        @SelectedDiscount.Description
                    </p>
                }
            </div>

            @if (SelectedDiscount.AppliesToProducts?.Any() == true)
            {
                <div class="products">
                    <span class="info-label">Gælder for produkter</span>
                    <span class="info-value d-flex flex-column g-1 ga">
                        <div class="border rounded p-2" style="overflow-y:scroll; max-height:7.7rem">
                            <table class="table">
                                <tbody>
                                    @foreach (var product in SelectedDiscount.AppliesToProducts)
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </span>
                </div>
            }

            <div class="footer">
                <div class="btn-group w-100">
                    <button class="btn card-btn" style="color:white; background-color:crimson" @onclick="() => ShowDelete = true">
                        Selt
                    </button>
                    <button class="btn card-btn" @onclick="() => ShowEdit = true">
                        Rediger
                    </button>
                </div>
            </div>
        </div>
    </BookingNotification>
}
@if (ShowDelete)
{
    <BookingNotification IsVisible=ShowDelete IsVisibleChanged="v => ShowDelete = v">
        <div class="d-flex align-items-center flex-column w-100">
            <p>Er du sikker på at du vil slette dette tilbud?</p>
            <button class="btn card-btn w-100" style="background-color:crimson; color:white;" @onclick="ConfirmDelete">Bekræft</button>
        </div>
    </BookingNotification>
}
@if (ShowEdit)
{
    <CreateWindow IsVisible=ShowEdit IsVisibleChanged="v => ShowEdit = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
        @if (SelectedDiscount.Type == "Kampagne Rabat")
        {
            <CreateCampaignDiscount OnClose="Refresh" IsEdit=true discountEdit="SelectedDiscount"></CreateCampaignDiscount>
        }
        else
        {
            <CreateLoyaltyDiscount OnClose="Refresh" IsEdit=true discountEdit="SelectedDiscount"></CreateLoyaltyDiscount>
        }
    </CreateWindow>
}


@code {
    private List<DiscountOverviewDTO> Discounts { get; set; } = new();
    private string SearchTermName { get; set; } = "";
    private string SearchTermType { get; set; } = "";
    private bool isVisible = false;
    private DiscountOverviewDTO SelectedDiscount { get; set; }
    private bool ShowDetails = false;
    private List<DiscountOverviewDTO> FilterdDiscounts => Discounts.Where(d => (string.IsNullOrWhiteSpace(SearchTermName) || d.Name.Contains(SearchTermName, StringComparison.OrdinalIgnoreCase)) && ((string.IsNullOrWhiteSpace(SearchTermType) || d.Type == SearchTermType))).ToList();
    private int CountLoyalty => Discounts.Where(d => d.Type == "Loyalitets Rabat").Count();
    private int CountCampaign => Discounts.Where(d => d.Type == "Kampagne Rabat").Count();
    private TimeSpan Time => DateTime.Now > SelectedDiscount.Start ? DateTime.Now - SelectedDiscount.Start : SelectedDiscount.Start - DateTime.Now;
    private string TimeString => DateTime.Now < SelectedDiscount.Start ? $"Aktiv igen om {Time.Days} Dage, {Time.Hours} Timer, og {Time.Minutes} Minutter" : $"Aktiveret for {Time.Days} Dage, {Time.Hours} Timer, og {Time.Minutes} Minutter Siden";
    private bool ShowEdit { get; set; } = false;
    private bool ShowDelete { get; set; } = false;
    [Inject] private NavigationManager Nav { get; set; } = null!;
    protected override async Task OnInitializedAsync()
    {
        Discounts = await discountService.GetAllDiscountsForOverviewAsync();
        SelectedDiscount = new();
    }
    private void ShowDiscountDetails(DiscountOverviewDTO discount)
    {
        SelectedDiscount = discount;
        ShowDetails = true;
    }
    private async Task ConfirmDelete()
    {
        try
        {
            await discountService.DeleteDiscountById(SelectedDiscount.Id);
            Refresh();
        }
        catch
        {

        }
    }
    private void Refresh()
    {
        Nav.Refresh(true);
    }
}