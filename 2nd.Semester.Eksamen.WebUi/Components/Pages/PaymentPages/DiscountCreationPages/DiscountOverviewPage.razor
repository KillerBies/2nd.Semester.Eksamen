@page "/DiscountOverviewPage"
@using _2nd.Semester.Eksamen.Application.Services.ProductServices
@using _2nd.Semester.Eksamen.Application.ApplicationInterfaces
@using _2nd.Semester.Eksamen.Application.DTO.ProductDTO
@using _2nd.Semester.Eksamen.WebUi.Components.Shared
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@inject IDiscountService discountService
@rendermode InteractiveServer


<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Rabatter</h1>
                    <p class="subtitle">Oversigt over alle rabatter</p>
                </div>
                <div class="btn-group ms-auto" style="width:40%; gap:1rem;">
                    <div class="btn-group" >
                        <select id="discountType" name="discountType" @bind="SearchTermType" @bind:event="oninput">
                            <option value="">Alle</option>
                            <option value="Kampagne Rabat">Kampagner</option>
                            <option value="Loyalitets Rabat">Loyalitets rabatter</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <input type="text" placeholder="Søg Rabattens Navn..." @bind="SearchTermName" @bind:event="oninput"></input>
                    </div>
                    <div style="height:100%">
                        <button class="btn btn-primary" @onclick="() => isVisible = true">
                            <i class="bi bi-plus-lg"></i> Tilføj Tilbud
                        </button>
                    </div>
                </div>
            </div>
            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total</h3>
                        <span>@Discounts.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Kampagner</h3>  
                        <span>@CountCampaign</span>
                    </div>
                    <div class="stat-card">
                        <h3>Loyalitets Discounts</h3>
                        <span>@CountLoyalty</span>
                    </div>
                </div>

                <div style="margin:30px;">
                    @if (Discounts == null)
                    {
                        <p>Indlæser rabatter...</p>
                    }
                    else if (!Discounts.Any())
                    {
                        <p>Ingen rabatter fundet.</p>
                    }
                    else
                    {
                        <div class="grid">
                            @foreach (var discount in FilterdDiscounts)
                            {
                                <div class="discount-card @(discount.IsActive ? "active" : "inactive")">
                                    <div class="discount-card-header">
                                        <h3>@discount.Name</h3>

                                        <span class="badge @(discount.Type == "Kampagne Rabat" ? "campaign" : "loyalty")">
                                            @discount.Type
                                        </span>
                                    </div>

                                    <div class="discount-card-body">
                                        @if (discount.Type == "Kampagne Rabat")
                                        {
                                            <p class="description">@discount.Description</p>

                                            <div class="date-range">
                                                <span>@discount.Start.ToShortDateString()</span>
                                                <span>→</span>
                                                <span>@discount.End.ToShortDateString()</span>
                                            </div>

                                            @if (discount.AppliesToProducts?.Any() == true)
                                            {
                                                <div class="product-list">
                                                    @foreach (var product in discount.AppliesToProducts.Take(3))
                                                    {
                                                        <span class="product-chip">@product.Name</span>
                                                    }

                                                    @if (discount.AppliesToProducts.Count > 3)
                                                    {
                                                        <span class="more">+@(@discount.AppliesToProducts.Count - 3)</span>
                                                    }
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p><b>Loyalitetstype:</b> @discount.LoyaltyDiscountType</p>
                                            <p><b>Minimum besøg:</b> @discount.MinimumVisits</p>
                                        }

                                        <div class="discount-values">
                                            @if (discount.TreatmentDiscount > 0)
                                            {
                                                <div>
                                                    <span class="label">Behandling</span>
                                                    <span class="value">@((discount.TreatmentDiscount * 100).ToString("0")) %</span>
                                                </div>
                                            }

                                            @if (discount.ProductDiscount > 0)
                                            {
                                                <div>
                                                    <span class="label">Produkt</span>
                                                    <span class="value">@((discount.ProductDiscount * 100).ToString("0")) %</span>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="discount-card-footer">
                                        <span class="status @(discount.IsActive ? "active" : "inactive")">
                                            @(discount.IsActive ? "Aktiv" : "Inaktiv")
                                        </span>

                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => ShowDiscountDetails(discount)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if(isVisible)
{
    <CreateWindow IsVisible=isVisible IsVisibleChanged="v => isVisible = v">
            <div class="shadow-sm">
                <CreateDiscount></CreateDiscount>
            </div>
    </CreateWindow>
}

@if(ShowDetails)
{
    <BookingNotification IsVisible=ShowDetails>
        <div class="discount-details-card">
            <div class="header">
                <h2>@SelectedDiscount.Name</h2>

                <span class="badge @(SelectedDiscount.Type == "Kampagne Rabat" ? "campaign" : "loyalty")">
                    @SelectedDiscount.Type
                </span>
            </div>

            <p class="description">
                @if (SelectedDiscount.Type == "Kampagne Rabat")
                {
                    @SelectedDiscount.Description
                }
                else
                {
                    <span>
                        Loyalitetstype: <b>@SelectedDiscount.LoyaltyDiscountType</b>
                    </span>
                }
            </p>

            <div class="info-grid">
                @if (SelectedDiscount.Type == "Kampagne Rabat")
                {
                    <div>
                        <span class="label">Start</span>
                        <span>@SelectedDiscount.Start.ToShortDateString()</span>
                    </div>

                    <div>
                        <span class="label">Slut</span>
                        <span>@SelectedDiscount.End.ToShortDateString()</span>
                    </div>
                }

                @if (SelectedDiscount.MinimumVisits > 0)
                {
                    <div>
                        <span class="label">Minimum besøg</span>
                        <span>@SelectedDiscount.MinimumVisits</span>
                    </div>
                }

                <div>
                    <span class="label">Antal anvendelser</span>
                    <span>@SelectedDiscount.NumberOfUses</span>
                </div>
            </div>

            <div class="discount-values">
                @if (SelectedDiscount.TreatmentDiscount > 0)
                {
                    <div class="value-card">
                        <span class="label">Behandling</span>
                        <span class="value">@SelectedDiscount.TreatmentDiscount %</span>
                    </div>
                }

                @if (SelectedDiscount.ProductDiscount > 0)
                {
                    <div class="value-card">
                        <span class="label">Produkt</span>
                        <span class="value">@SelectedDiscount.ProductDiscount %</span>
                    </div>
                }
            </div>

            @if (SelectedDiscount.AppliesToProducts?.Any() == true)
            {
                <div class="products">
                    <span class="label">Gælder for produkter</span>
                    <div class="product-list">
                        @foreach (var product in SelectedDiscount.AppliesToProducts)
                        {
                            <span class="product-chip">@product.Name</span>
                        }
                    </div>
                </div>
            }

            <div class="footer">
                <span class="status @(SelectedDiscount.IsActive ? "active" : "inactive")">
                    @(SelectedDiscount.IsActive ? "Aktiv" : "Inaktiv")
                </span>

                <button class="btn btn-outline-secondary" @onclick="()=>ShowDetails=false">
                    Luk
                </button>
            </div>
        </div>
    </BookingNotification>
}



@code {
    private List<DiscountOverviewDTO> Discounts { get; set; } = new();
    private string SearchTermName { get; set; } = "";
    private string SearchTermType { get; set; } = "";
    private bool isVisible = false;
    private DiscountOverviewDTO SelectedDiscount { get; set; }
    private bool ShowDetails = false;
    private List<DiscountOverviewDTO> FilterdDiscounts => Discounts.Where(d => (string.IsNullOrWhiteSpace(SearchTermName) || d.Name.Contains(SearchTermName, StringComparison.OrdinalIgnoreCase)) && ((string.IsNullOrWhiteSpace(SearchTermType) || d.Type == SearchTermType))).ToList();
    private int CountLoyalty => Discounts.Where(d => d.Type == "Loyalitets Rabat").Count();
    private int CountCampaign => Discounts.Where(d => d.Type == "Kampagne Rabat").Count();
    protected override async Task OnInitializedAsync()
    {
        Discounts = await discountService.GetAllDiscountsForOverviewAsync();
        SelectedDiscount = new();
    }
    private void ShowDiscountDetails(DiscountOverviewDTO discount)
    {
        SelectedDiscount = discount;
        ShowDetails = true;
    }
}

