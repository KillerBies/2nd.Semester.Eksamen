@page "/employees"
@namespace _2nd.Semester.Eksamen.WebUi.Components.Pages
@rendermode InteractiveServer

<div class="employee-nav">
    <!-- Header with search and add button -->
    <div class="employee-nav-header">
        <h3 class="title">Medarbejdere</h3>
        <div class="input-group">
            <input type="text" placeholder="Search Name..." @bind="SearchTermName" @bind:event="oninput" />
        </div>
        <div class="input-group">
            <input type="text" placeholder="Search Phone Number..." @bind="SearchTermPhone" @bind:event="oninput" />
        </div>
        <button class="add-employee-btn" @onclick="GoToAddEmployee">
            <i class="bi bi-plus-lg"></i> Add Employee
        </button>
    </div>
</div>

<div class="grid">
    @foreach (var emp in Employees)
    {
        <div class="card">
            <div class="color-box" style="background:@emp.Color"></div>

            <div class="info">
                <h4>@emp.Name</h4>
                <p>@emp.Type</p>
            </div>
        </div>
    }
</div>

