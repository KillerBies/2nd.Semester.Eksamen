@page "/TreatmentOverview"
@namespace _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.TreatmentPages
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@rendermode InteractiveServer



<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Behandlinger</h1>
                    <p class="subtitle">Oversigt over alle behandlinger</p>
                </div>
                <div class="btn-group ms-auto" style="width:20%; gap:1rem;">
                    <div class="input-group" style="padding-right:1rem;">
                        <input type="text" placeholder="Søg Behandlings Navn..." @bind="SearchTermName" @bind:event="oninput"></input>
                    </div>
                </div>
                <button class="btn btn-primary" @onclick="() => CreateTreatment = true">
                    <i class="bi bi-plus-lg"></i> Tilføj Behandling
                </button>
            </div>
            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total</h3>
                        <span>@Treatments.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Udførte Behandlinger</h3>
                        <span>0</span>
                    </div>
                    <div class="stat-card">
                        <h3>Pending</h3>
                        <span>0</span>
                    </div>
                </div>

                <div style="margin:30px;">
                    @if (Treatments == null)
                    {
                        <p>Indlæser behandlinger...</p>
                    }
                    else if (!Treatments.Any())
                    {
                        <p>Ingen behandlinger fundet.</p>
                    }
                    else
                    {
                        <div class="dTO-grid">
                            @foreach (var treatment in FilterdTreatments)
                            {
                                <div class="treatment-card">
                                    <div class="treatment-card-header d-flex">
                                        <h3>@treatment.Name</h3>
                                        <span class="badge bg-dark bg-opacity-50 ms-auto">@treatment.Category</span>
                                    </div>

                                    <div class="treatment-card-body">
                                        <div class="info-row">
                                            <span class="info-label">Pris</span>
                                            <span class="info-value">@treatment.BasePrice.ToString("0") Kr.</span>
                                        </div>
                                        <div class="info-row">
                                            <span class="info-label">Varighed</span>
                                            <span class="info-value">@treatment.Duration.TotalMinutes Minutter</span>
                                        </div>
                                    </div>

                                    <div class="treatment-card-footer">
                                        <button class="btn btn-primary" @onclick="() => ShowOverlay(treatment)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@if (EditTreatment)
{
    <CreateWindow StyleParameters="background-color: #F3F2F2; padding:0;width:auto;z-index: 4000;" IsVisible=EditTreatment IsVisibleChanged="@(v => EditTreatment = v)">
            <CreateTreatment IsEdit=true TreatmentEdit="selectedTreatment" OnClose="Refresh"></CreateTreatment>
        </CreateWindow>
}
@if (isVisible)
{
    <BookingNotification IsVisible=isVisible IsVisibleChanged="@(v => isVisible = v)">
        <TreatmentDetails OnClose="() => isVisible = false" OnDelete="() => ShowDelete = true" OnEdit="() => EditTreatment = true" selectedTreatment="selectedTreatment"></TreatmentDetails>
    </BookingNotification>
}
@if (CreateTreatment)
{
    <CreateWindow StyleParameters="background-color: #F3F2F2; padding:0;width:auto;" IsVisible=CreateTreatment IsVisibleChanged="@(v => CreateTreatment = v)">
        <CreateTreatment OnClose="Refresh"></CreateTreatment>
    </CreateWindow>
}
@if(ShowDelete)
{
    <BookingNotification IsVisible=ShowDelete IsVisibleChanged="v => ShowDelete = v">
        <div class="d-flex align-items-center flex-column w-100">
       <p>Er du sikker på at du vil slette denne behandling?</p>
        <button class="btn card-btn w-100" style="background-color:crimson;" @onclick="() => DeleteTreatment(selectedTreatment.TreatmentId)">Bekræft</button>
        </div>
    </BookingNotification>
}

