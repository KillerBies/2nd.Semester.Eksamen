@page "/ProductOverviewPage"
@using _2nd.Semester.Eksamen.Application.Services.ProductServices
@using _2nd.Semester.Eksamen.Application.ApplicationInterfaces
@using _2nd.Semester.Eksamen.Application.DTO.ProductDTO
@using _2nd.Semester.Eksamen.WebUi.Components.Shared
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@using _2nd.Semester.Eksamen.Application.DTO;
@inject IProductOverviewService productOverviewService
@rendermode InteractiveServer


<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Produkter</h1>
                    <p class="subtitle">Oversigt over alle produkter</p>
                </div>
                <div class="input-group">
                <div class="equal-row ms-auto">
                    <select id="discountType" class="bg-white search-box" name="discountType" @bind="SearchTermType" @bind:event="oninput">
                        <option value="">Alle</option>
                        @foreach (var category in Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                    <input type="text" class="search-box" placeholder="Søg Produktets Navn..." @bind="SearchTermName" @bind:event="oninput"></input>
                    <button class="btn btn-primary" @onclick="() => isVisible = true"><i class="bi bi-plus-lg"></i> Tilføj Produkt</button>
                </div>
                </div>
            </div>
            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total</h3>
                        <span>@Products.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Kategorier</h3>  
                        <span>@CountCategory</span>
                    </div>
                    <div class="stat-card">
                        <h3>Solgte Produkter</h3>
                        <span>@CountSold</span>
                    </div>
                </div>

                <div style="margin:30px;">
                    @if (Products == null)
                    {
                        <p>Indlæser produkter...</p>
                    }
                    else if (!Products.Any())
                    {
                        <p>Ingen produkter fundet.</p>
                    }
                    else
                    {
                        <div class="grid grid-4">
                            @foreach (var product in FilterdProducts)
                            {
                                <div class="card">
                                    <div class="card-header bg-transparent border-0" style="display:flex;">
                                        <h3>@product.Name</h3>
                                        <span class="badge bg-secondary bg-opacity-50 ms-auto" style="height:fit-content">
                                            @product.Category
                                        </span>
                                    </div>

                                    <div class="card-body">
                                        <h4>@product.Price.ToString("0") Kr.</h4>
                                        <p style="margin: 16px 0;color: #555;line-height: 1.5;">@product.Description</p>
                                    </div>

                                    <div class="card-footer bg-transparent border-0">
                                        <button class="btn btn-treatment" @onclick="() => ShowProductDetails(product)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if(isVisible)
{
    <CreateWindow IsVisible=isVisible IsVisibleChanged="v => isVisible = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
            <div class="shadow-sm">
                <CreateProduct OnClose="Refresh"></CreateProduct>
            </div>
    </CreateWindow>
}

@if(ShowDetails)
{
    <BookingNotification IsVisible=ShowDetails IsVisibleChanged="v => ShowDetails = v">
        <ProductDetails OnDelete="() => ShowDelete = true" OnEdit="() => UpdateProduct = true" ProductId="SelectedProduct.Id"></ProductDetails>
    </BookingNotification>
}
@if (UpdateProduct)
{
    <CreateWindow IsVisible="UpdateProduct" IsVisibleChanged="v => UpdateProduct = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
        <CreateProduct EditProduct="SelectedProduct" IsEdit=true OnClose="Refresh"></CreateProduct>
    </CreateWindow>
}
@if (ShowDelete)
{
    <BookingNotification IsVisible=ShowDelete IsVisibleChanged="v => ShowDelete = v">
        <div class="d-flex align-items-center flex-column w-100">
            <p>Er du sikker på at du vil slette denne behandling?</p>
            <button class="btn card-btn w-100" style="background-color:crimson; color:white;" @onclick="DeleteProduct">Bekræft</button>
        </div>
    </BookingNotification>
}

@code {
    [Inject] private NavigationManager Nav { get; set; } = null!;
    private List<ProductOverviewDTO> Products { get; set; } = new();
    private string SearchTermName { get; set; } = "";
    private string SearchTermType { get; set; } = "";
    private List<OrderSnapshotDTO> SelectedHistory { get; set; } = new();
    private bool isVisible = false;
    private bool ShowSalesHistory = false;
    private bool UpdateProduct = false;
    private ProductOverviewDTO SelectedProduct { get; set; }
    private bool ShowDetails = false;
    private List<ProductOverviewDTO> FilterdProducts => Products.Where(p => (string.IsNullOrWhiteSpace(SearchTermName) || p.Name.Contains(SearchTermName, StringComparison.OrdinalIgnoreCase)) && ((string.IsNullOrWhiteSpace(SearchTermType) || p.Category == SearchTermType))).ToList();
    private int CountCategory => Products.Select(p => p.Category).Distinct().Count();
    private int CountSold = 0;
    private List<string> Categories { get; set; } = new();
    private bool EditPriceDetail { get; set; } = false;
    private bool EditNameDetail { get; set; } = false;
    private bool EditDescriptionDetail { get; set; } = false;
    private bool ShowDelete { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Products = await productOverviewService.GetAllProductOverviewsAsync();
        Categories = await productOverviewService.GetAllCategoriesAsync();
        SelectedProduct = new();
    }
    private async Task DeleteProduct()
    {
        try
        {
            await productOverviewService.DeleteProductAsync(SelectedProduct);
            Refresh();
        }
        catch
        {
            
        }
    }
    private async Task ShowProductDetails(ProductOverviewDTO product)
    {
        SelectedProduct = product;
        SelectedHistory = await productOverviewService.GetProductSalesHistoryAsync(product.Name);
        ShowDetails = true;
    }
    private void CloseDetail()
    {
        ShowDetails = false;
        EditPriceDetail = false;
        EditNameDetail = false;
        EditDescriptionDetail = false;
    }
    private async Task SaveProduct(ProductOverviewDTO product)
    {
        CloseDetail();
    }
    private void Refresh()
    {
        Nav.Refresh(true);
    }
}