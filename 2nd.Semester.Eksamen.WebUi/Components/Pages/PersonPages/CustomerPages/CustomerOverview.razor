@page "/CustomerOverview"
@using _2nd.Semester.Eksamen.Application.DTO.PersonDTO.CustomersDTO;
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@using _2nd.Semester.Eksamen.WebUi.Components.Shared
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.PersonPages.CustomerPages.CreateCustomer
@rendermode InteractiveServer
@namespace _2nd.Semester.Eksamen.WebUi.Components.Pages.PersonPages.CustomerPages


<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Kunder</h1>
                    <p class="subtitle">Oversigt over alle Kunder</p>
                </div>
                <div class="input-group">
                <div class="equal-row ms-auto">
                    <input type="text" class="search-box" placeholder="Søg Navn..."@bind="SearchTermName"@bind:event="oninput" />
                    <input type="text" class="search-box" placeholder="Søg Tlf. Nummer..."@bind="SearchTermPhone"@bind:event="oninput" />
                    <button class="btn btn-primary" @onclick="() => CreateCustomer = true"> <i class="bi bi-plus-lg"></i> Tilføj Kunde</button>
                </div>
                </div>
            </div>

            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Kunder</h3>
                        <span>@Customers.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Firma Kunder</h3>
                        <span>@CompanyCount</span>
                    </div>
                    <div class="stat-card">
                        <h3>Privat Kunder</h3>
                        <span>@PrivateCount</span>
                    </div>
                </div>
                <div style="margin:30px;">
                    @if (LoadFailed)
                    {
                        <div class="alert alert-danger">
                            Kunne ikke forbinde til databasen. Prøv igen senere
                        </div>
                    }
                    else if (Customers == null)
                    {
                        <div>Loader...</div>
                    }
                    else
                    {
                        <div class="grid">
                            @foreach (var Customer in FilterdCustomers)
                            {
                                <div class="customer-card">
                                    <div class="customer-card-header">
                                        @if (Customer is PrivateCustomerDTO pr)
                                        {
                                            <h3> @pr.Name @pr.LastName </h3>
                                            <span class="badge ms-auto" style="background: #e0f2ff;  color: #0369a1;">Privat Kunde</span>
                                        }
                                        else
                                        {
                                            <h3>@Customer.Name</h3>
                                            <span class="badge ms-auto" style="background: #ecfdf5;  color: #065f46;">Firma Kunde</span>
                                        }
                                    </div>
                                    <div class="customer-card-body">
                                        <div class="info-row">
                                            <span class="info-label">Email</span>
                                            <span class="info-value">@Customer.Email</span>
                                        </div>
                                        <div class="info-row">
                                            <span class="info-label">Telefon</span>
                                            <span class="info-value">@Customer.PhoneNumber</span>
                                        </div>
                                        <div class="info-row">
                                            <span class="info-label">By</span>
                                            <span class="info-value">@Customer.City</span>
                                        </div>
                                    </div>

                                    <div class="customer-card-footer">
                                        <button class="btn btn-primary"
                                                @onclick="() => Select(Customer)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@if (ShowDetails)
{
    <CreateWindow IsVisible="ShowDetails" IsVisibleChanged="@(v => ShowDetails = v)" StyleParameters="background-color: transparent; padding:0;width:fit-content; height:fit-content;scrollbar-width:none;z-index:1000;">
        <DetailWindow OnEditBooking="OnEditBooking" Refresh="Refresh" ContextStack="ContextStack" OnDelete="Delete" OnAddBookingToCustomer="AddBookingToCustomer"></DetailWindow>
    </CreateWindow>
}
@if (ShowDelete)
{
    <CreateWindow IsVisible="ShowDelete" IsVisibleChanged="@(v => ShowDelete = v)" StyleParameters="background-color: #F3F2F2; margin:2rem;width:fit-content; height:fit-content;scrollbar-width:none;z-index:9999;">
        <DeleteWindow Refresh="Refresh" context="DeleteContext"></DeleteWindow>
    </CreateWindow>
}

@if (CreateCustomer)
{
    <CreateWindow IsVisible=CreateCustomer IsVisibleChanged="v => CreateCustomer = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
        <CreateCustomer IsBooking=false OnClose="Refresh"></CreateCustomer>
    </CreateWindow>
}



