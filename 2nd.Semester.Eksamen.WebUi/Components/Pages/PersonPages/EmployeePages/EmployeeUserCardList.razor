@page "/employees"
@namespace _2nd.Semester.Eksamen.WebUi.Components.Pages.PersonPages.EmployeePages
@using _2nd.Semester.Eksamen.WebUi.Components.Shared
@using _2nd.Semester.Eksamen.WebUi.Components.Pages.ProductPages.BookingPages
@rendermode InteractiveServer

@if (ShowEmployeeDetails)
{
    <CreateWindow IsVisible="ShowEmployeeDetails"
                  IsVisibleChanged="@(v => ShowEmployeeDetails = v)" StyleParameters="background-color: #F3F2F2; padding:0;width:26%;">
        <EmployeeDetails Id="SelectedEmployeeId" ShowEdit="() => UpdateEmployee=true" ></EmployeeDetails>
    </CreateWindow>
}
<div style="background-color:#F3F2F2; height:100vh">
    <div class="overview-page">
        <div class="shadow-sm" style="background-color:#F3F2F2;">
            <div class="page-header">
                <div>
                    <h1>Medarbejdere</h1>
                    <p class="subtitle">Oversigt over alle medarbejdere</p>
                </div>
                <div class="btn-group ms-auto" style="width:50%; gap:1rem;">
                    <div class="input-group">
                        <div class="input-group">
                            <input type="text"
                                   placeholder="Søg Navn..."
                                   @bind="SearchTermName"
                                   @bind:event="oninput" />
                        </div>
                    </div>
                    <div class="input-group">
                        <input type="text"
                               placeholder="Søg Tlf. Nummer..."
                               @bind="SearchTermPhone"
                               @bind:event="oninput" />
                    </div>
                    <button class="add-employee-btn" @onclick="()=>CreateEmployee=true">
                        <i class="bi bi-plus-lg"></i> Tilføj Medarbejder
                    </button>
                </div>
            </div>
            <div class="overview-page-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total</h3>
                        <span>@Employees.Count</span>
                    </div>
                    <div class="stat-card">
                        <h3>Frilance</h3>
                        <span>@FrilanceCount</span>
                    </div>
                    <div class="stat-card">
                        <h3>Fuildtids</h3>
                        <span>@FuildtidsCount</span>
                    </div>
                </div>
                <div style="margin:30px;">
                    @if (LoadFailed)
                    {
                        <div class="alert alert-danger">
                            Kunne ikke forbinde til databasen. Prøv igen senere
                        </div>
                    }
                    else if (Employees == null)
                    {
                        <div>Loader...</div>
                    }
                    else
                    {
                        <div class="emp-grid">
                            @foreach (var emp in FilteredEmployees)
                            {
                                <div class="employee-card">
                                    <div class="employee-card-header">
                                        <h3> @emp.Name</h3>
                                        <span class="badge ms-auto" style="background: #e0f2ff;  color: #0369a1;">@emp.Type</span>
                                    </div>
                                    <div class="employee-card-body">
                                        <div class="info-row">
                                            <span class="info-label">Email</span>
                                            <span class="info-value">@emp.Email</span>
                                        </div>
                                        <div class="info-row">
                                            <span class="info-label">Telefon</span>
                                            <span class="info-value">@emp.PhoneNumber</span>
                                        </div>
                                        <div class="info-row">
                                            <span class="info-label">By</span>
                                            <span class="info-value">@emp.City</span>
                                        </div>
                                    </div>

                                    <div class="customer-card-footer">
                                        <button class="btn btn-primary card-btn w-100"
                                                @onclick="() => GoToEmployee(emp.Id)">
                                            Se detaljer
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if(CreateEmployee)
{
    <CreateWindow IsVisible=CreateEmployee IsVisibleChanged="v => CreateEmployee = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
        <CreateEmployee></CreateEmployee>
    </CreateWindow>
}
@if(UpdateEmployee)
{
    <CreateWindow IsVisible=UpdateEmployee IsVisibleChanged="v => UpdateEmployee = v" StyleParameters="background-color: #F3F2F2; padding:0;width:auto;">
        <CreateEmployee IsEdit=true EditEmployeeID="SelectedEmployeeId" OnClose="Refresh"></CreateEmployee>
    </CreateWindow>
}
)